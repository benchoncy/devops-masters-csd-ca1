{% extends '_layout.html.j2' %}
{% block content %}
<h4>BP Category Calculator</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="bpform">
            {% if error %}
            <div class="alert alert-danger" role="alert">
                <div>
                    <i class="bi-exclamation-triangle-fill me-2"></i> Error:
                    <ul>
                        {% for msg in error %}
                        <li>{{ msg }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% endif %}
            <div class="form-group">
                <label for="bpsystolic" class="control-label">Systolic</label>
                <input id="bpsystolic" name="bpsystolic" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="bpdiastolic" class="control-label">Diastolic</label>
                <input id="bpdiastolic" name="bpdiastolic" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
            {% if response %}
            <div id="response" class="alert alert-primary mt-2" role="alert">
                You have {{ response }} blood pressure.
            </div>
            {% endif %}
        </form>
    </div>
    <div class="col-md-8">
        <div class="float-end"><img class="border border-secondary" src="/plot{% if sd_values %}/{{ sd_values[0] }}/{{ sd_values[1] }}{% endif %}" alt="my plot"></div>
    </div>
</div>
{% endblock %}