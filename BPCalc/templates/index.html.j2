{% extends '_layout.html.j2' %}
{% block content %}
<h4>BP Category Calculator</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" id="form1">
            {% if error %}
            <div class="alert alert-danger" role="alert">
                <div>
                    <i class="bi-exclamation-triangle-fill me-2"></i> Error:
                    <ul>
                        {% for msg in error %}
                        <li>{{ msg }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% endif %}
            <div class="form-group">
                <label for="bpsystolic" class="control-label">Systolic</label>
                <input id="bpsystolic" name="bpsystolic" class="form-control"/>
            </div>
            <div class="form-group">
                <label for="bpdiastolic" class="control-label">Diastolic</label>
                <input id="bpdiastolic" name="bpdiastolic" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
            {% if response %}
            <div class="alert alert-primary mt-2" role="alert">
                You have {{ response.value }} blood preasure.
            </div>
            {% endif %}
        </form>
    </div>
</div>
{% endblock %}